<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <%= user.username %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to user.username, class: "text-success" %></h5>
            <%= link_to "View", user_path(user), class: "btn btn-outline-success" %>
            <%= link_to "Edit", edit_user_path(user), class: "btn btn-outline-info" %>
            <%= link_to "Delete", user_path(user), class: "btn btn-outline-danger", method: :delete %>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(user.created_at) %> ago, Edited <%= time_ago_in_words(user.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
